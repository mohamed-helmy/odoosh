<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="quotation_vendors_form" model="ir.ui.view">
            <field name="name">quotation.vendors.wizard</field>
            <field name="model">quotation.vendors</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="vendors_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="create_quotations" string="Create Request For Quotation" type="object"
                                class="btn-primary"/>
                        <button name="cancel_request" string="Cancel" type="object"
                                />
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>